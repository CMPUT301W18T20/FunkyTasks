<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:padding="25dp"
    android:background="@drawable/rsz_bg">


    <TextView
        android:id="@+id/taskNamerequester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task1"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView3status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:text="Status:  "
        android:textColor="#ffffff"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/taskNamerequester"
        app:layout_constraintTop_toBottomOf="@+id/taskNamerequester" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description:  "
        android:textColor="#ffffff"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3status"
        app:layout_constraintTop_toBottomOf="@+id/textView3status" />

    <TextView
        android:id="@+id/textDescriptionprovider"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="make ken happy"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/textView2"
        app:layout_constraintLeft_toRightOf="@id/textView2" />

    <TextView
        android:id="@+id/textBidprovider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="LOWEST BID: $"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3status"
        app:layout_constraintTop_toBottomOf="@id/textView2" />


    <TextView
        android:id="@+id/taskStatustext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView3status"
        app:layout_constraintLeft_toRightOf="@+id/textView3status" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY BID: $"
        android:layout_marginTop="8dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textBidprovider"
        app:layout_constraintLeft_toLeftOf="@+id/textView3status"

        />

    <Button
        android:id="@+id/multiFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/buttonshape"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/lowestBidAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@+id/textBidprovider"
        app:layout_constraintBottom_toBottomOf="@id/textBidprovider"/>


    <TextView

        android:id="@+id/myBidAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@+id/TextView3"
        app:layout_constraintBottom_toBottomOf="@id/TextView3"/>

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="8dp"
        android:text="Requested By: "
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3status"
        app:layout_constraintTop_toBottomOf="@id/myBidAmount" />

    <TextView
        android:id="@+id/taskRequesterUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/TextView"
        app:layout_constraintBottom_toBottomOf="@id/TextView" />
    <TextView
        android:id="@+id/taskRequesterPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/TextView"
        app:layout_constraintTop_toBottomOf="@id/taskRequesterUsername" />
    <TextView
        android:id="@+id/taskRequesterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/TextView"
        app:layout_constraintTop_toBottomOf="@id/taskRequesterPhone" />

    <Button
        android:id="@+id/viewphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="viewphoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taskStatustext"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seeLocation"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View Location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewphoto" />


</android.support.constraint.ConstraintLayout>